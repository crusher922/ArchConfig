{
 "layer" : "top",
 "width" : 1152,
 "margin-top" : 8,
 
 // modules layout
 "modules-left": ["custom/launcher", "cpu", "memory", "disk"],
 "modules-center":[],
 "modules-right":[],

 // modules definition
 "custom-laucher":{
    "format": "󰣇"
    //"on-click": 

 },
 "cpu": {
    "interval": 20,
    "format":"<span></span> {}%",
    "max-length" : 10
 },

 "memory": {
  "interval": 30,
  "format":"<span></span> {}%",
  "max-length" : 10
},

"disk":{
  "interval":1,
  "format":"<span></span> {}%"
}


}

